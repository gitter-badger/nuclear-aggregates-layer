@model DoubleGis.Erm.BL.UI.Web.Mvc.Models.AdvertisementElementModels.FileViewModel
           
@Html.HiddenFor(m => m.FileName)
@Html.HiddenFor(m => m.FileContentType)
@Html.HiddenFor(m => m.FileContentLength)
@Html.HiddenFor(m => m.TemplateFileExtensionRestriction)

<div class="row-wrapper">
    @Html.TemplateField(m => m.FileId, FieldFlex.lone)
    <div id="FileName-wrapper" class="display-wrapper field-wrapper lone">
        <div class="label-wrapper">
        </div>
        <div class="input-wrapper">
            <table>
                <tr>
                    <td>@BLResources.AcceptableFileExtensions:</td>
                    <td><span style="font-weight: bold">@(Model.TemplateFileExtensionRestriction ?? BLResources.NotSet)</span></td>
                </tr>
            </table>
        </div>
    </div>
</div>
