
@model LockDetailViewModel

@{
    Layout = "../Shared/_CardLayout.cshtml";
}

@section CardScripts
{
}

@section CardBody
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.LockId)
    <div class="Tab" id="MainTab" title="@BLResources.GeneralTabTitle">
        <div class="row-wrapper">
            @Html.TemplateField(m => m.Amount, FieldFlex.twins)
            @Html.TemplateField(m => m.Description, FieldFlex.twins)
        </div>
        <div class="row-wrapper">
            @Html.TemplateField(m => m.CreateDate, FieldFlex.twins, new DateTimeSettings{ReadOnly = true})
            @Html.TemplateField(m => m.Price, FieldFlex.twins, new LookupSettings { EntityName = EntityType.Instance.Price(), ReadOnly = !Model.IsNew && !string.IsNullOrEmpty(Model.Price.Value), })
        </div>
        <div class="row-wrapper">
            @Html.TemplateField(m => m.OrderPosition, FieldFlex.twins, new LookupSettings { EntityName = EntityType.Instance.OrderPosition(), ReadOnly = true })
        </div>
    </div>
}