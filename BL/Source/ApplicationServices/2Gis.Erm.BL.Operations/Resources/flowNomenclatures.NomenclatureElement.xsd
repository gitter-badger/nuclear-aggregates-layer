<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:simpleType name="string256">
    <xs:restriction base="xs:string">
      <xs:maxLength value="256"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="LinkObjectType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="None"/>
      <xs:enumeration value="Firm"/>
      <xs:enumeration value="CategorySingle"/>
      <xs:enumeration value="CategoryMultiple"/>
      <xs:enumeration value="CategoryMultipleAsterix"/>
      <xs:enumeration value="AddressSingle"/>
      <xs:enumeration value="AddressMultiple"/>
      <xs:enumeration value="AddressCategorySingle"/>
      <xs:enumeration value="AddressCategoryMultiple"/>
      <xs:enumeration value="AddressFirstLevelCategorySingle"/>
      <xs:enumeration value="AddressFirstLevelCategoryMultiple"/>
      <xs:enumeration value="ThemeMultiple"/>
    </xs:restriction>
  </xs:simpleType>
  
  <xs:simpleType name="AccountingMethod">
    <xs:restriction base="xs:string">
      <xs:enumeration value="GuaranteedProvision"/>
      <xs:enumeration value="PlannedProvision"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="Nomenclature">
    <xs:attribute name="Code" type="xs:long" use="required">
      <xs:annotation>
        <xs:documentation>Код номенклатуры</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="ProductCode" type="xs:long" use="required">
      <xs:annotation>
        <xs:documentation>Код экспорта элемента номенклатуры</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="SortingPosition" type="xs:int" use="optional">
      <xs:annotation>
        <xs:documentation>Заданный вручную порядок отображения позиции</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="Name" type="string256" use="required">
      <xs:annotation>
        <xs:documentation>Название номенклатуры</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="PlatformCode" type="xs:int" use="required">
      <xs:annotation>
        <xs:documentation>Код платформы номенклатуры</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="LinkObjectType" type="LinkObjectType" use="required">
      <xs:annotation>
        <xs:documentation>Тип объекта привязки</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="AccountingMethod" type="AccountingMethod" use="required">
      <xs:annotation>
        <xs:documentation>
          Способ учета.
          GuaranteedProvision - Гарантированное оказание услуги - модель продаж предполагающая, что конечная цена услуги известна в момент её продажи
          PlannedProvision - Планируемое оказание услуги - модель продаж предполагающая, что конечная цена услуги известна только после её оказания (продажи по кликам)
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="IsHidden" type="xs:boolean" use="optional" default="false">
      <xs:annotation>
        <xs:documentation>Признак активности элемента номенклатуры.</xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="IsDeleted" type="xs:boolean" use="optional" default="false">
      <xs:annotation>
        <xs:documentation>Признак удаленного элемента номенклатуры.</xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:element name="NomenclatureElement" type="Nomenclature">
    <xs:annotation>
      <xs:documentation>Элемент номенклатуры</xs:documentation>
    </xs:annotation>
  </xs:element>

</xs:schema>