<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <!-- replace application settings -->
  <appSettings>
    <add key="MsCrmIntegrationMode" value="Disabled" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="EnableElasticsearch" value="false" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="EnableIntegration" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="IntegrationApplicationName" value="ERM{EnvNum}" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="ReportServer" value="http://uk-sql02/ReportServer/Pages/ReportViewer.aspx?/Test.{EnvNum}" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="SupportUrl" value="mailto:support@2gis.ru" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="EnableNotifications" value="false" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
    <add key="TargetEnvironment" value="Test" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
    <add key="TargetEnvironmentName" value="Test.{EnvNum}" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="JobStoreType" value="TX" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
    <add key="SchedulerName" value="TaskService.Scheduler.Test.{EnvNum}" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>

    <add key="BasicLanguage" value="cs" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="BusinessModel" value="Czech" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="RegionalTerritoryLocaleSpecificWord" value="Regionalni uzemi" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="EnableRabbitMqQueue" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="MaxWorkingThreads" value="5" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="UseWarehouseIntegration" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
  </appSettings>

  <!-- replace connection strings -->

  <connectionStrings>
    <add name="Erm" providerName="System.Data.SqlClient" connectionString="Data Source=uk-sql02;Initial Catalog=Erm{EnvNum};Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    <add name="ErmRabbitMq" connectionString="Hostname=mq.test;Port=5672;VirtualHost=erm{EnvNum};UserName=erm;Password=LeoYee5y" />
    <add name="ErmValidation" providerName="System.Data.SqlClient" connectionString="Data Source=uk-sql02;Initial Catalog=Erm{EnvNum};Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    <add name="ErmReports" providerName="System.Data.SqlClient" connectionString="Data Source=uk-sql02;Initial Catalog=ErmReports;Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    <add name="CrmConnection" xdt:Transform="Remove" xdt:Locator="Match(name)" />
    <add name="ErmLogging" providerName="System.Data.SqlClient" connectionString="Data Source=uk-sql02;Initial Catalog=ErmLogging{EnvNum};Integrated Security=True;Enlist=False" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    <add name="ErmSearch" xdt:Transform="Remove" xdt:Locator="Match(name)" />
    <add name="QuartzJobStore" providerName="SqlServer-20" connectionString="Server=uk-sql02;Database=Quartz;Trusted_Connection=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
  </connectionStrings>

  <ermServicesSettings>
    <ermServices>
      <ermService name="IntrospectionService" restUrl="https://metadata{EnvNum}.api.test.erm.2gis.cz/Metadata.svc/Rest" baseUrl="https://metadata{EnvNum}.api.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="OrderValidationService" restUrl="https://order-validation{EnvNum}.api.test.erm.2gis.cz/Validate.svc/Rest"  baseUrl="https://order-validation{EnvNum}.api.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      
      <ermService name="BasicOperationsService" restUrl="https://basic-operations{EnvNum}.api.test.erm.2gis.cz" baseUrl="https://basic-operations{EnvNum}.api.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="MoDiService" restUrl="https://money-distribution{EnvNum}.api.test.erm.2gis.cz" baseUrl="https://money-distribution{EnvNum}.api.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="SpecialOperationsService" restUrl="https://financial-operations{EnvNum}.api.test.erm.2gis.cz" baseUrl="https://financial-operations{EnvNum}.api.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="RealeasingService" restUrl="https://releasing{EnvNum}.api.test.erm.2gis.cz" baseUrl="https://releasing{EnvNum}.api.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="WebClientService" restUrl="https://web-app{EnvNum}.test.erm.2gis.cz" baseUrl="https://web-app{EnvNum}.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    </ermServices>
  </ermServicesSettings>

  <dataCacheClients xdt:Transform="Replace">
    <dataCacheClient name="default" maxConnectionsToServer="8">
      <hosts>
        <host name="uk-erm-test01" cachePort="22233"/>
        <host name="uk-erm-test02" cachePort="22233"/>
      </hosts>
    </dataCacheClient>
  </dataCacheClients>

  <system.web>
    <!-- enable asp.net custom errors -->
    <customErrors mode="On" xdt:Transform="SetAttributes" />
  </system.web>
  <system.webServer>
    <directoryBrowse enabled="false" xdt:Transform="SetAttributes" />
    <rewrite xdt:Transform="Replace">
      <rules>
        <rule name="CanonicalHostNameRule" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^web-app{EnvNum}\.test\.erm\.2gis\.cz$" negate="true" />
          </conditions>
          <action type="Redirect" url="http://web-app{EnvNum}.test.erm.2gis.cz/{R:1}" redirectType="Found" />
        </rule>
        <rule name="RedirectToHttpsRule" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" />
            <add input="{HTTP_HOST}" pattern="^web-app{EnvNum}\.test\.erm\.2gis\.cz$" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}{URL}" redirectType="Found" />
        </rule>
      </rules>
    </rewrite>
    <httpProtocol>
      <customHeaders>
        <!-- Web app-->
        <add name="Access-Control-Allow-Origin" value="https://basic-operations{EnvNum}.api.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='UI.Web.Mvc']])" />
        <!-- Metadata svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app{EnvNum}.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Metadata']])" />
        <!-- Operations svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app{EnvNum}.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Operations']])" />
        <!-- Operations.Special svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app{EnvNum}.test.erm.2gis.cz" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Operations.Special']])" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>