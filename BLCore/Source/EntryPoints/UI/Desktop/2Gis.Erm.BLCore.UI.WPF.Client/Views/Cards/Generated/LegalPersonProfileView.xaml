<UserControl x:Class="DoubleGis.Erm.BLCore.UI.WPF.Client.Views.Cards.LegalPersonProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Controls;assembly=2Gis.Platform.UI.WPF.Infrastructure"
			 xmlns:focusableBinding="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Util.FocusableBinding;assembly=2Gis.Platform.UI.WPF.Infrastructure"
             xmlns:controls="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 xmlns:contextNav="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.ViewModel.ContextualNavigation;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
             xmlns:basic="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls.Basic;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <UserControl.Resources>
		<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/2Gis.Erm.BLCore.UI.WPF.Client;component/Themes/generic.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
        
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
			<core:BriefGrid Columns="*, *" Rows="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
				<controls:NamedTextBox Grid.Row="0" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Name}" 
										Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="0" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PositionInGenitive}" 
										Text="{Binding PositionInGenitive, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="1" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PositionInNominative}" 
										Text="{Binding PositionInNominative, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="1" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ChiefNameInNominative}" 
										Text="{Binding ChiefNameInNominative, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="2" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ChiefNameInGenitive}" 
										Text="{Binding ChiefNameInGenitive, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedEnumComboBox Grid.Row="2" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.OperatesOnTheBasisInGenitive}" 
										SelectedValue="{Binding OperatesOnTheBasisInGenitive, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="3" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.DocumentsDeliveryAddress}" 
										Text="{Binding DocumentsDeliveryAddress, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="3" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CertificateNumber}" 
										Text="{Binding CertificateNumber, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="4" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CertificateDate}" 
										SelectedDate="{Binding CertificateDate, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="4" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.WarrantyNumber}" 
										Text="{Binding WarrantyNumber, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="5" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.WarrantyBeginDate}" 
										SelectedDate="{Binding WarrantyBeginDate, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="5" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.WarrantyEndDate}" 
										SelectedDate="{Binding WarrantyEndDate, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="6" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.BargainNumber}" 
										Text="{Binding BargainNumber, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="6" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.BargainBeginDate}" 
										SelectedDate="{Binding BargainBeginDate, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="7" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.BargainEndDate}" 
										SelectedDate="{Binding BargainEndDate, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="7" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PostAddress}" 
										Text="{Binding PostAddress, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="8" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.RecipientName}" 
										Text="{Binding RecipientName, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedEnumComboBox Grid.Row="8" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.DocumentsDeliveryMethod}" 
										SelectedValue="{Binding DocumentsDeliveryMethod, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="9" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.EmailForAccountingDocuments}" 
										Text="{Binding EmailForAccountingDocuments, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="9" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.AdditionalEmail}" 
										Text="{Binding AdditionalEmail, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="10" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PersonResponsibleForDocuments}" 
										Text="{Binding PersonResponsibleForDocuments, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="10" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ContactPhone}" 
										Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="11" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PaymentEssentialElements}" 
										Text="{Binding PaymentEssentialElements, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="11" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.LegalPersonRef}" 
										Reference="{Binding LegalPersonRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="12" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Owner}" 
										Reference="{Binding OwnerRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="12" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedBy}" 
										Reference="{Binding CreatedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="13" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding CreatedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="13" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ModifiedBy}" 
										Reference="{Binding ModifiedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="14" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding ModifiedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
			</core:BriefGrid>
	</StackPanel>
</UserControl>
