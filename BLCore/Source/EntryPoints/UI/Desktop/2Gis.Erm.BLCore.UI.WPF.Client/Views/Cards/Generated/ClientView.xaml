<UserControl x:Class="DoubleGis.Erm.BLCore.UI.WPF.Client.Views.Cards.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Controls;assembly=2Gis.Platform.UI.WPF.Infrastructure"
			 xmlns:focusableBinding="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Util.FocusableBinding;assembly=2Gis.Platform.UI.WPF.Infrastructure"
             xmlns:controls="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 xmlns:contextNav="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.ViewModel.ContextualNavigation;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
             xmlns:basic="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls.Basic;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <UserControl.Resources>
		<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/2Gis.Erm.BLCore.UI.WPF.Client;component/Themes/generic.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
        
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
			<core:BriefGrid Columns="*, *" Rows="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
				<controls:NamedTextBox Grid.Row="0" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.NameOfClient}" 
										Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="0" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.MainAddress}" 
										Text="{Binding MainAddress, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="1" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Comment}" 
										Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="1" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.MainPhoneNumber}" 
										Text="{Binding MainPhoneNumber, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="2" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.AdditionalPhoneNumber1}" 
										Text="{Binding AdditionalPhoneNumber1, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="2" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.AdditionalPhoneNumber2}" 
										Text="{Binding AdditionalPhoneNumber2, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="3" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Email}" 
										Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="3" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Fax}" 
										Text="{Binding Fax, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="4" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Website}" 
										Text="{Binding Website, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="4" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.MainFirm}" 
										Reference="{Binding MainFirmRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="5" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Territory}" 
										Reference="{Binding TerritoryRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedEnumComboBox Grid.Row="5" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.InformationSource}" 
										SelectedValue="{Binding InformationSource, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="6" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PromisingScore}" 
										Text="{Binding PromisingValue, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="6" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.LastQualifyTime}" 
										SelectedDate="{Binding LastQualifyTime, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="7" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.LastDisqualifyTime}" 
										SelectedDate="{Binding LastDisqualifyTime, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="7" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding CreatedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="8" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ModifiedBy}" 
										Reference="{Binding ModifiedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="8" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding ModifiedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
			</core:BriefGrid>
	</StackPanel>
</UserControl>
