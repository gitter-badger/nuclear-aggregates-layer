<?xml version="1.0" encoding="utf-8" ?>
<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

  <!-- replace application settings -->
  <appSettings>
    <add key="EnableReplication" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="EnableCaching" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="EnableIntegration" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="IntegrationApplicationName" value="ERM" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="ReportServer" value="http://uk-rpt.2gis.local/ReportServer/Pages/ReportViewer.aspx?/MSCRM" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="CrmHost" value="erm.russia" xdt:Transform="Insert" />
    <add key="EnableNotifications" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="TargetEnvironment" value="Production" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>

    <!-- Резервный вариант интеграции с экспортом. Актуально только в релизе 0.15, далее остается только ServiceBus -->
    <add key="FtpExportSite" value="ftp://buildftp.2gis.local/erm/" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="FtpExportSiteUsername" value="uk.buildftp.fullaccess@2gis.local" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="FtpExportSitePassword" value="GhjwtccC,jhrb!!" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
  </appSettings>

  <system.web>
    <!-- enable asp.net custom errors -->
    <customErrors mode="On"  xdt:Transform="SetAttributes" />
  </system.web>

  <system.webServer>
    <rewrite xdt:Transform="Insert">
      <rules>
        <rule name="CanonicalHostNameRule" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^web-app\.build\.erm\.russia$" negate="true" />
            <add input="{HTTP_HOST}" pattern="localhost" negate="true" />
            <add input="{URL}" pattern="\.svc$" negate="true" />
          </conditions>
          <action type="Redirect" url="http://web-app.erm-build.2gis.local/{R:1}" redirectType="Found" />
        </rule>
        <rule name="RedirectToHttpsRule" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" />
            <add input="{HTTP_HOST}" pattern="^web-app\.build\.erm\.russia$" />
            <add input="{HTTP_HOST}" pattern="localhost" negate="true" />
            <add input="{URL}" pattern="\.svc$" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}{URL}" redirectType="Found" />
        </rule>
      </rules>
    </rewrite>
    <httpProtocol>
      <customHeaders >
        <add name="Access-Control-Allow-Origin" value="https://basic-operations.api.erm.2gis.local" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>

  <system.serviceModel>
    <client>
      <endpoint name="WSHttpBinding_IOrderValidationApplicationService_Secure"
                address="https://order-validation.api.erm.2gis.local/Validate.svc/Soap"
                xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />

      <endpoint name="NetTcpBinding_IBrokerApiSender"
                address="net.tcp://uk-busdgpp01.2gis.local:8091/BrokerApiService"
                xdt:Transform="SetAttributes" xdt:Locator="Match(name)">
        <identity>
          <servicePrincipalName xdt:Transform="Remove"/>
          <userPrincipalName value="Uk.Bus.Service@2gis.local" xdt:Transform="Insert"/>
        </identity>
      </endpoint>

      <endpoint name="NetTcpBinding_IBrokerApiReceiver"
                address="net.tcp://uk-busdgpp01.2gis.local:8091/BrokerApiService"
                xdt:Transform="SetAttributes" xdt:Locator="Match(name)">
        <identity>
          <servicePrincipalName xdt:Transform="Remove"/>
          <userPrincipalName value="Uk.Bus.Service@2gis.local" xdt:Transform="Insert"/>
        </identity>
      </endpoint>

      <endpoint name="WsHttpBinding_IPrintRegionalApplicationService"
                address="https://money-distribution.api.erm.2gis.local/PrintRegional.svc"
                xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="WsHttpBinding_IAccountingSystemApplicationService"
                address="https://money-distribution.api.erm.2gis.local/AccountingSystem.svc"
                xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="WsHttpBinding_IWithdrawalInfoApplicationService"
                address="https://money-distribution.api.erm.2gis.local/WithdrawalInfo.svc"
                xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="BasicHttpBinding_IReportsApplicationService"
                address="https://money-distribution.api.erm.2gis.local/Reports.svc"
                xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />

      <endpoint name="WSHttpBinding_IIdentityProviderApplicationService_Secure"
            address="https://metadata.api.erm.2gis.local/Identity.svc/Soap"
            xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    </client>
  </system.serviceModel>

</configuration>