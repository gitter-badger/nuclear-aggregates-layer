<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="ermServicesSettings" type="DoubleGis.Erm.Platform.API.Core.Settings.APIServices.ErmServiceDescriptionsConfigurationSection, 2Gis.Erm.Platform.API.Core" requirePermission="false" />
  </configSections>
  <appSettings>
    <add key="ReserveUserAccount" value="reserve"/>

    <add key="EnableNotifications" value="false"/>
    <add key="EnableCaching" value="true"/>
    <add key="EnableReplication" value="false"/>
    <add key="CreationOrderRequestsEnabled" value="false"/>

    <add key="WarmClientDaysCount" value="14"/>
    <add key="SignificantDigitsNumber" value="2"/>
    <add key="MinDebtAmount" value="-100"/>
    <add key="OrderRequestProcessingHoursAmount" value="2"/>

    <add key="BasicLanguage" value="ru"/>
    <add key="ReserveLanguage" value="en"/>
    <add key="BusinessModel" value="Chile"/>

    <add key="TargetEnvironment" value="Development"/>
    <!-- возможные значения: Development, Test, Production -->
    <add key="EntryPointName" value="Tests.API.Operations.InProc"/>
    <add key="TargetEnvironmentName" value="Dev"/>
  </appSettings>
  
  <connectionStrings>
    <add name="Erm" providerName="System.Data.SqlClient" connectionString="Data Source=.;Initial Catalog=Erm;Integrated Security=True" />
    <add name="ErmReports" providerName="System.Data.SqlClient" connectionString="Data Source=.;Initial Catalog=ErmReports;Integrated Security=True" />
    <add name="ErmLogging" providerName="System.Data.SqlClient" connectionString="Data Source=.;Initial Catalog=ErmLogging;Integrated Security=True;Enlist=False" />
    <add name="CrmConnection" connectionString=""/>
  </connectionStrings>

  <ermServicesSettings>
    <ermServices>
      <ermService name="IntrospectionService" restUrl="https://localhost:44303/Metadata.svc/Rest" baseUrl="https://localhost:44303" soapEndpointName="" />
      <ermService name="OrderValidationService" restUrl="https://localhost:44301/Validate.svc/Rest" baseUrl="https://localhost:44301" soapEndpointName="WSHttpBinding_IOrderValidationApplicationService_Secure" />
      <ermService name="IdentityService" restUrl="https://localhost:44303/Identity.svc/Rest" baseUrl="https://localhost:44303" soapEndpointName="WSHttpBinding_IIdentityProviderApplicationService_Secure" />
      <ermService name="BasicOperationsService" restUrl="https://localhost:44302" baseUrl="https://localhost:44302" soapEndpointName="" />
      <ermService name="MoDiService" restUrl="https://localhost:44304" baseUrl="https://localhost:44304" soapEndpointName="" />
      <ermService name="WebClientService" restUrl="https://localhost:44300" baseUrl="https://localhost:44300" />
    </ermServices>
  </ermServicesSettings>
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1"/>
  </startup>
</configuration>
