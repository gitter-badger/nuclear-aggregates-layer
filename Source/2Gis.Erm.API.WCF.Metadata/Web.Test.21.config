<?xml version="1.0"?>
<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

  <!-- replace application settings -->
  <appSettings>
    <add key="EnableNotifications" value="false" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="EnableCaching" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="EnableReplication" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="IdentityServiceUniqueId" value="8" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="TargetEnvironment" value="Test" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
  </appSettings>

  <!-- replace connection strings -->
  <connectionStrings>
    <add name="Erm" providerName="System.Data.SqlClient" connectionString="Data Source=UK-SQL01;Initial Catalog=Erm21;Integrated Security=True;Application Name=ErmMetadataSvc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    <add name="ErmLogging" providerName="System.Data.SqlClient" connectionString="Data Source=UK-SQL01;Initial Catalog=ErmLogging21;Integrated Security=True;Application Name=ErmLoggingMetadataSvc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
  </connectionStrings>

  <system.web>
    <!-- enable asp.net custom errors -->
    <customErrors mode="On"  xdt:Transform="SetAttributes" />
  </system.web>

  <system.webServer>
    <!-- disable directory browsing -->
    <directoryBrowse enabled="false" xdt:Transform="SetAttributes" />

    <httpProtocol>
      <customHeaders >
        <add name="Access-Control-Allow-Origin" value="https://web-app21.test.erm.russia" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>

  <system.serviceModel>
    <client>
      <!-- basic operations -->
      <endpoint name="ActionsHistory" address="https://basic-operations21.api.test.erm.russia/ActionsHistory.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="Activate" address="https://basic-operations21.api.test.erm.russia/Activate.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="Append" address="https://basic-operations21.api.test.erm.russia/Append.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="Assign" address="https://basic-operations21.api.test.erm.russia/Assign.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="ChangeClient" address="https://basic-operations21.api.test.erm.russia/ChangeClient.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="ChangeTerritory" address="https://basic-operations21.api.test.erm.russia/ChangeTerritory.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="CheckForDebts" address="https://basic-operations21.api.test.erm.russia/CheckForDebts.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="Deactivate" address="https://basic-operations21.api.test.erm.russia/Deactivate.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="Delete" address="https://basic-operations21.api.test.erm.russia/Delete.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="Disqualify" address="https://basic-operations21.api.test.erm.russia/Disqualify.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="Qualify" address="https://basic-operations21.api.test.erm.russia/Qualify.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />

      <!-- order validation -->
      <endpoint name="Validate" address="https://order-validation21.api.test.erm.russia/Validate.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />

      <!-- money distribution -->
      <endpoint name="AccountingSystem" address="https://money-distribution21.api.test.erm.russia/AccountingSystem.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="PrintRegional" address="https://money-distribution21.api.test.erm.russia/PrintRegional.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="Reports" address="https://money-distribution21.api.test.erm.russia/Reports.svc/Discovery" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <endpoint name="WithdrawalInfo" address="https://money-distribution21.api.test.erm.russia/WithdrawalInfo.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />

      <!-- public service -->
      <endpoint name="ErmService" address="https://web-app21.test.erm.russia/ErmService.svc" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />

    </client>
  </system.serviceModel>

</configuration>