        </behavior>
      </endpointBehaviors>
    </behaviors>
    <bindings>
      <webHttpBinding>
        <binding name="sslWebHttpConfiguration" crossDomainScriptAccessEnabled="true">
          <security mode="Transport">
            <transport clientCredentialType="None" />
          </security>
        </binding>
      </webHttpBinding>
      <wsHttpBinding>
        <binding name="messageSecureWsHttpConfiguration">
          <security mode="Message">
            <transport clientCredentialType="Windows" />
          </security>
        </binding>
        <binding name="sslWsHttpConfiguration" receiveTimeout="00:10:00" sendTimeout="00:10:00">
          <security mode="Transport">
            <transport clientCredentialType="None" />
          </security>
        </binding>
      </wsHttpBinding>
    </bindings>
    <services>
      <service name="DoubleGis.Erm.Platform.WCF.Metadata.MetadataProviderApplicationService" behaviorConfiguration="defautServiceBehavior">
