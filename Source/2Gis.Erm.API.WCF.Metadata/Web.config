        <endpoint name="WebHttpBinding_IMetadataProviderApplicationRestService_Secure" behaviorConfiguration="restEndpointBehavior" address="Rest" binding="webHttpBinding" bindingConfiguration="sslWebHttpConfiguration" contract="DoubleGis.Erm.Platform.API.Metadata.IMetadataProviderApplicationRestService" />
      </service>
      <service name="DoubleGis.Erm.Platform.WCF.Metadata.IdentityProviderApplicationService" behaviorConfiguration="defautServiceBehavior">
        <endpoint name="WSHttpBinding_IIdentityProviderApplicationService_Secure" behaviorConfiguration="" address="Soap" binding="wsHttpBinding" bindingConfiguration="sslWsHttpConfiguration" contract="DoubleGis.Erm.Platform.API.Metadata.IIdentityProviderApplicationService" />
        <endpoint name="WebHttpBinding_IIdentityProviderApplicationRestService_Secure" behaviorConfiguration="restEndpointBehavior" address="Rest" binding="webHttpBinding" bindingConfiguration="sslWebHttpConfiguration" contract="DoubleGis.Erm.Platform.API.Metadata.IIdentityProviderApplicationRestService" />
      </service>
    </services>
    <client>
