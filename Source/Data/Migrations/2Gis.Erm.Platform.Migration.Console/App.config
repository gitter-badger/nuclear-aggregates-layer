<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <runtime>
    <loadFromRemoteSources enabled="true"/>

    <!-- load platform specific dll from manifest -->
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.SqlServer.BatchParser"
                          publicKeyToken="89845dcd8080cc91"
                          processorArchitecture="x86"
                          culture="neutral" />
        <codeBase version="10.0.0.0" href=".\x86\Microsoft.SqlServer.BatchParser.dll"/>
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.SqlServer.BatchParser"
                          publicKeyToken="89845dcd8080cc91"
                          processorArchitecture="amd64"
                          culture="neutral" />
        <codeBase version="10.0.0.0" href=".\x64\Microsoft.SqlServer.BatchParser.dll"/>
      </dependentAssembly>
    </assemblyBinding>
    
  </runtime>
  <!-- Для предотвращения исключения, выкидываемого SQL SMO. -->
  <startup useLegacyV2RuntimeActivationPolicy="true">
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
