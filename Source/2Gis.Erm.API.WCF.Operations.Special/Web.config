<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="ermServicesSettings" type="DoubleGis.Erm.Platform.API.Core.Settings.APIServices.ErmServiceDescriptionsConfigurationSection, 2Gis.Erm.Platform.API.Core" requirePermission="false" />
  </configSections>
  <appSettings>
    <!-- IAppSettings -->
    <add key="ReserveUserAccount" value="reserve" />
    <add key="EnableNotifications" value="false" />
    <add key="EnableCaching" value="true" />
    <add key="EnableReplication" value="false" />
    <add key="WarmClientDaysCount" value="14" />
    <add key="SignificantDigitsNumber" value="2" />
    <add key="MinDebtAmount" value="-100" />
    <add key="OrderRequestProcessingHoursAmount" value="2" />
    <add key="BasicLanguage" value="ru" />
    <add key="ReserveLanguage" value="en" />
    <add key="BusinessModel" value="Russia" />
    <add key="TargetEnvironment" value="Development" />
    <!-- возможные значения: Development, Test, Production -->
    <add key="EntryPointName" value="API.WCF.Operations.Special" />
    <add key="TargetEnvironmentName" value="Dev" />
  </appSettings>

  <connectionStrings>
    <add name="Erm" providerName="System.Data.SqlClient" connectionString="Data Source=.;Initial Catalog=Erm;Integrated Security=True;Application Name=ErmFinancialOperationsSvc" />
    <add name="ErmLogging" providerName="System.Data.SqlClient" connectionString="Data Source=.;Initial Catalog=ErmLogging;Integrated Security=True;Enlist=False;Application Name=ErmLoggingFinancialOperationsSvc" />
  </connectionStrings>

  <ermServicesSettings>
    <ermServices>
      <ermService name="MoDiService" restUrl="https://localhost:44304" baseUrl="https://localhost:44304" soapEndpointName="" />
      <ermService name="OrderValidationService" restUrl="https://localhost:44301/Validate.svc/Rest" soapEndpointName="WSHttpBinding_IOrderValidationApplicationService_Secure" />
      <ermService name="IdentityService" restUrl="https://localhost:44303/Identity.svc/Rest" soapEndpointName="WSHttpBinding_IIdentityProviderApplicationService_Secure" />
    </ermServices>
  </ermServicesSettings>

  <!--
    For a description of web.config changes see http://go.microsoft.com/fwlink/?LinkId=235367.

    The following attributes can be set on the <httpRuntime> tag.
      <system.Web>
        <httpRuntime targetFramework="4.5.1" />
      </system.Web>
  -->
  <system.web>
    <compilation debug="true" targetFramework="4.5.1" />
    <httpRuntime targetFramework="4.5" />
    <customErrors mode="Off" />
  </system.web>
  <system.serviceModel>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" minFreeMemoryPercentageToActivateService="0" multipleSiteBindingsEnabled="true" />
    <extensions>
      <behaviorExtensions>
        <add name="serviceVersioning" type="DoubleGis.Erm.Platform.WCF.Extensions.VersionBehaviorExtensionElement, 2Gis.Erm.Platform.WCF.Extensions" />
        <add name="sharedTypesMessageInspector" type="DoubleGis.Erm.API.WCF.Operations.Special.SharedTypesMessageInspectorEndpointBehaviorExtensionElement, 2Gis.Erm.API.WCF.Operations.Special" />
      </behaviorExtensions>
    </extensions>
    <behaviors>
      <endpointBehaviors>
        <behavior name="sharedTypesMessageInspectorBehavior">
          <sharedTypesMessageInspector />
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="defautServiceBehavior">
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDiscovery />
          <serviceVersioning />
        </behavior>
        <behavior name="">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <wsHttpBinding>
        <binding name="sslWsHttpCalculatorConfiguration" maxReceivedMessageSize="10000000" receiveTimeout="01:00:00" sendTimeout="01:00:00">
          <security mode="Transport">
            <transport clientCredentialType="None" />
          </security>
        </binding>
        <binding name="sslWsHttpConfiguration" maxReceivedMessageSize="10000000" receiveTimeout="01:00:00" sendTimeout="01:00:00">
          <security mode="Transport">
            <transport clientCredentialType="None" />
          </security>
        </binding>
        <binding name="sslWsHttpRequestsConfiguration" maxReceivedMessageSize="10000000" receiveTimeout="01:00:00" sendTimeout="01:00:00">
          <security mode="Transport">
            <transport clientCredentialType="Windows" />
          </security>
        </binding>
      </wsHttpBinding>
    </bindings>
    <services>
      <service name="DoubleGis.Erm.BLCore.WCF.Operations.Special.FinancialOperations.CostCalculationApplicationService" behaviorConfiguration="defautServiceBehavior">
        <endpoint name="WSHttpBinding_ICostCalculationApplicationService_Secure" behaviorConfiguration="sharedTypesMessageInspectorBehavior" address="Soap/Generic" binding="wsHttpBinding" bindingConfiguration="sslWsHttpCalculatorConfiguration" contract="DoubleGis.Erm.BLCore.API.Operations.Special.Remote.CostCalculation.ICostCalculationApplicationService" />
      </service>
      <service name="DoubleGis.Erm.BLCore.WCF.Operations.Special.FinancialOperations.RequestStateApplicationService" behaviorConfiguration="defautServiceBehavior">
        <endpoint name="WSHttpBinding_IRequestStateApplicationService_Secure" behaviorConfiguration="sharedTypesMessageInspectorBehavior" address="Soap/Generic" binding="wsHttpBinding" bindingConfiguration="sslWsHttpRequestsConfiguration" contract="DoubleGis.Erm.BLCore.API.Operations.Special.Remote.OrderProcessing.IRequestStateApplicationService" />
      </service>
      <service name="DoubleGis.Erm.BLCore.WCF.Operations.Special.FinancialOperations.OrderProcessingRequestsApplicationService" behaviorConfiguration="defautServiceBehavior">
        <endpoint name="WSHttpBinding_IOrderProcessingRequestsApplicationService_Secure" behaviorConfiguration="sharedTypesMessageInspectorBehavior" address="Soap/Generic" binding="wsHttpBinding" bindingConfiguration="sslWsHttpRequestsConfiguration" contract="DoubleGis.Erm.BLCore.API.Operations.Special.Remote.OrderProcessing.IOrderProcessingRequestsApplicationService" />
      </service>
    </services>
  </system.serviceModel>
  <system.webServer>
    <!--
        To browse web app root directory during debugging, set the value below to true.
        Set to false before deployment to avoid disclosing web app folder information.
      -->
    <directoryBrowse enabled="true" />
  </system.webServer>
  
