    <add key="BasicLanguage" value="ru" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="BusinessModel" value="Ukraine" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>

    <add key="RegionalTerritoryLocaleSpecificWord" value="Региональная территория" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
    <add key="EnableRabbitMqQueue" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="MaxWorkingThreads" value="5" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />


    <add key="FtpExportSite" value="ftp://testftp.2gis.local/" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="FtpExportSiteUsername" value="UK.TestFTP.Full" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="FtpExportSitePassword" value="Angcthdbc07" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
  </appSettings>


  <!-- replace connection strings -->

  <connectionStrings>
    <add name="Erm" providerName="System.Data.SqlClient" connectionString="Data Source=uk-test-sql01;Initial Catalog=ErmUA;Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    <add name="ErmRabbitMq" connectionString="Hostname=mq.test;Port=5672;VirtualHost=erm;UserName=erm;Password=LeoYee5y" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    <add name="ErmValidation" providerName="System.Data.SqlClient" connectionString="Data Source=uk-test-sql01;Initial Catalog=ErmUA;Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    <add name="ErmReports" providerName="System.Data.SqlClient" connectionString="Data Source=uk-test-sql01;Initial Catalog=ErmReports;Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    <add name="CrmConnection" xdt:Transform="Remove" xdt:Locator="Match(name)" />
    <add name="ErmLogging" providerName="System.Data.SqlClient" connectionString="Data Source=uk-test-sql01;Initial Catalog=ErmLoggingUA;Integrated Security=True;Enlist=False" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
  </connectionStrings>

  <ermServicesSettings>
    <ermServices>
      <ermService name="IntrospectionService" restUrl="https://metadata.api.load.erm.2gis.ua/Metadata.svc/Rest" baseUrl="https://metadata.api.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="OrderValidationService" restUrl="https://order-validation.api.load.erm.2gis.ua/Validate.svc/Rest" baseUrl="https://order-validation.api.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="IdentityService" restUrl="https://metadata.api.prod.erm.2gis.ua/Identity.svc/Rest" baseUrl="https://metadata.api.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="BasicOperationsService" restUrl="https://basic-operations.api.load.erm.2gis.ua" baseUrl="https://basic-operations.api.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="MoDiService" restUrl="https://money-distribution.api.load.erm.2gis.ua" baseUrl="https://money-distribution.api.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="SpecialOperationsService" restUrl="https://financial-operations.api.load.erm.2gis.ua" baseUrl="https://financial-operations.api.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="RealeasingService" restUrl="https://releasing.api.load.erm.2gis.ua" baseUrl="https://releasing.api.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="WebClientService" restUrl="https://web-app.load.erm.2gis.ua" baseUrl="https://web-app.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    </ermServices>
  </ermServicesSettings>

  <system.web>
    <!-- enable asp.net custom errors -->
    <customErrors mode="On" xdt:Transform="SetAttributes" />
  </system.web>
  <system.webServer>
    <directoryBrowse enabled="false" xdt:Transform="SetAttributes" />
    <rewrite xdt:Transform="Replace">
      <rules>
        <rule name="CanonicalHostNameRule" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^web-app\.load\.erm\.2gis\.ua$" negate="true" />
          </conditions>
          <action type="Redirect" url="http://web-app.load.erm.2gis.ua/{R:1}" redirectType="Found" />
        </rule>
        <rule name="RedirectToHttpsRule" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" />
            <add input="{HTTP_HOST}" pattern="^web-app\.load\.erm\.2gis\.ua$" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}{URL}" redirectType="Found" />
        </rule>
      </rules>
    </rewrite>
    <httpProtocol>
      <customHeaders>
        <!-- Web app-->
        <add name="Access-Control-Allow-Origin" value="https://basic-operations.api.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='UI.Web.Mvc']])" />
        <!-- Metadata svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Metadata']])" />
        <!-- Operations svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Operations']])" />
        <!-- Operations.Special svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app.load.erm.2gis.ua" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Operations.Special']])" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
  <system.serviceModel>
    <client>
    </client>
  </system.serviceModel>
</configuration>