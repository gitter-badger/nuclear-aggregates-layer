<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <!-- replace application settings -->
  <appSettings>
    <add key="MsCrmIntegrationMode" value="Disabled" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    
    <add key="EnableIntegration" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="IntegrationApplicationName" value="ERM{EnvNum}" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="ReportServer" value="http://uk-sql01/ReportServer/Pages/ReportViewer.aspx?/Test.{EnvNum}" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="EnableNotifications" value="false" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
    <add key="TargetEnvironment" value="Test" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
    <add key="TargetEnvironmentName" value="Test.{EnvNum}" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="BasicLanguage" value="es" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
    <add key="BusinessModel" value="Chile" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

    <add key="RegionalTerritoryLocaleSpecificWord" value="Territorio regional" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="EnableRabbitMqQueue" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="MaxWorkingThreads" value="5" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="UseWarehouseIntegration" value="true" xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>


    <add key="FtpExportSite" value="ftp://testftp.2gis.local/" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="FtpExportSiteUsername" value="UK.TestFTP.Full" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
    <add key="FtpExportSitePassword" value="Angcthdbc07" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />

  </appSettings>


  <!-- replace connection strings -->

  <connectionStrings>
    <add name="Erm" providerName="System.Data.SqlClient" connectionString="Data Source=uk-sql02.2gis.local;Initial Catalog=Erm{EnvNum};Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    <add name="ErmRabbitMq" connectionString="Hostname=mq.test;Port=5672;VirtualHost=erm{EnvNum};UserName=erm;Password=LeoYee5y" />
    <add name="ErmValidation" providerName="System.Data.SqlClient" connectionString="Data Source=uk-sql02.2gis.local;Initial Catalog=Erm{EnvNum};Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    <add name="ErmReports" providerName="System.Data.SqlClient" connectionString="Data Source=uk-sql02.2gis.local;Initial Catalog=ErmReports;Integrated Security=True" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    <add name="CrmConnection" xdt:Transform="Remove" xdt:Locator="Match(name)" />
    <add name="ErmLogging" providerName="System.Data.SqlClient" connectionString="Data Source=uk-sql02.2gis.local;Initial Catalog=ErmLogging{EnvNum};Integrated Security=True;Enlist=False" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    <add name="ErmSearch" connectionString="Uris=['http://uk-erm-search01:9500', 'http://uk-erm-search01:9501'];Protocol=thrift;IndexPrefix=test.{EnvNum};BatchSize=10000" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
  </connectionStrings>

  <ermServicesSettings>
    <ermServices>
      <ermService name="IntrospectionService" restUrl="https://metadata{EnvNum}.api.test.erm.2gis.cl/Metadata.svc/Rest" baseUrl="https://metadata{EnvNum}.api.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="OrderValidationService" restUrl="https://order-validation{EnvNum}.api.test.erm.2gis.cl/Validate.svc/Rest"  baseUrl="https://order-validation{EnvNum}.api.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="IdentityService" restUrl="https://metadata{EnvNum}.api.test.erm.2gis.cl/Identity.svc/Rest" baseUrl="https://metadata{EnvNum}.api.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="BasicOperationsService" restUrl="https://basic-operations{EnvNum}.api.test.erm.2gis.cl" baseUrl="https://basic-operations{EnvNum}.api.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="MoDiService" restUrl="https://money-distribution{EnvNum}.api.test.erm.2gis.cl" baseUrl="https://money-distribution{EnvNum}.api.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="SpecialOperationsService" restUrl="https://financial-operations{EnvNum}.api.test.erm.2gis.cl" baseUrl="https://financial-operations{EnvNum}.api.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="RealeasingService" restUrl="https://releasing{EnvNum}.api.test.erm.2gis.cl" baseUrl="https://releasing{EnvNum}.api.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="WebClientService" restUrl="https://web-app{EnvNum}.test.erm.2gis.cl" baseUrl="https://web-app{EnvNum}.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
    </ermServices>
  </ermServicesSettings>

  <dataCacheClients xdt:Transform="Replace">
    <dataCacheClient name="default" maxConnectionsToServer="8">
      <hosts>
        <host name="uk-erm-iis04" cachePort="22233"/>
        <host name="uk-erm-iis05" cachePort="22233"/>
        <host name="uk-erm-sql01.2gis.local" cachePort="22233"/>
      </hosts>
    </dataCacheClient>
  </dataCacheClients>

  <system.web>
    <!-- enable asp.net custom errors -->
    <customErrors mode="On" xdt:Transform="SetAttributes" />
  </system.web>
  <system.webServer>
    <directoryBrowse enabled="false" xdt:Transform="SetAttributes" />
    <rewrite xdt:Transform="Replace">
      <rules>
        <rule name="CanonicalHostNameRule" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^web-app{EnvNum}\.test\.erm\.2gis\.cl$" negate="true" />
          </conditions>
          <action type="Redirect" url="http://web-app{EnvNum}.test.erm.2gis.cl/{R:1}" redirectType="Found" />
        </rule>
        <rule name="RedirectToHttpsRule" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" />
            <add input="{HTTP_HOST}" pattern="^web-app{EnvNum}\.test\.erm\.2gis\.cl$" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}{URL}" redirectType="Found" />
        </rule>
      </rules>
    </rewrite>
    <httpProtocol>
      <customHeaders>
        <!-- Web app-->
        <add name="Access-Control-Allow-Origin" value="https://basic-operations{EnvNum}.api.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='UI.Web.Mvc']])" />
        <!-- Metadata svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app{EnvNum}.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Metadata']])" />
        <!-- Operations svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app{EnvNum}.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Operations']])" />
        <!-- Operations.Special svc-->
        <add name="Access-Control-Allow-Origin" value="https://web-app{EnvNum}.test.erm.2gis.cl" xdt:Transform="SetAttributes" xdt:Locator="Condition([@name='Access-Control-Allow-Origin' and /configuration/appSettings/add[@key='EntryPointName' and @value='API.WCF.Operations.Special']])" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>