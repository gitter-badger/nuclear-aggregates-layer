    <add name="ErmLogging" providerName="System.Data.SqlClient" connectionString="Data Source=uk-test-int03;Initial Catalog=ErmLoggingCZ;Integrated Security=True;Enlist=False" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
