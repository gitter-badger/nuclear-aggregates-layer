  <ermServicesSettings>
    <ermServices>
      <ermService name="IntrospectionService" restUrl="https://metadata.api.int.erm.czech/Metadata.svc/Rest" baseUrl="https://metadata.api.int.erm.czech" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="OrderValidationService" restUrl="https://order-validation.api.int.erm.czech/Validate.svc/Rest" baseUrl="https://order-validation.api.int.erm.czech" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="IdentityService" restUrl="https://metadata.api.int.erm.czech/Identity.svc/Rest" baseUrl="https://metadata.api.int.erm.czech" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="BasicOperationsService" restUrl="https://basic-operations.api.int.erm.czech" baseUrl="https://basic-operations.api.int.erm.czech" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="MoDiService" restUrl="https://money-distribution.api.int.erm.czech" baseUrl="https://money-distribution.api.int.erm.czech" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="FinancialOperationsService" restUrl="https://financial-operations.api.int.erm.czech" baseUrl="https://financial-operations.api.int.erm.czech" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
      <ermService name="RealeasingService" restUrl="https://releasing.api.int.erm.czech" baseUrl="https://releasing.api.int.erm.czech" xdt:Transform="SetAttributes" xdt:Locator="Match(name)" />
