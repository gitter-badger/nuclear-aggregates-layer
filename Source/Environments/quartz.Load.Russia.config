<?xml version="1.0" encoding="utf-8" ?>
<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

  <!-- overwrite existing jobs -->
  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>

  <schedule>

    <!-- Performed Operations through service bus LOAD Testing-->
    <job>
      <name>Performed Operations - Producer 1</name>
      <group>ErmInterruptable</group>
      <description>Performed Operations - Producer</description>
      <job-type>DoubleGis.Erm.Platform.TaskService.Jobs.Concrete.PerformedOperationsProcessing.Analysis.Producer.PerformedOperationsProducerJob, 2Gis.Erm.Platform.TaskService</job-type>

      <durable>true</durable>
      <recover>false</recover>
      <job-data-map>
        <entry>
          <key>MaxParallelism</key>
          <value>32</value>
        </entry>
      </job-data-map>
    </job>
    <trigger>
      <simple>
        <name>Performed Operations - Producer 1 - Infinite Execution Cycles</name>
        <group>Erm</group>

        <job-name>Performed Operations - Producer 1</job-name>
        <job-group>ErmInterruptable</job-group>

        <repeat-count>-1</repeat-count>
        <repeat-interval>2000</repeat-interval>
      </simple>
    </trigger>

    <job>
      <name>Performed Operations - Consumer</name>
      <group>ErmInterruptable</group>
      <description>Performed Operations - Consumer</description>
      <job-type>DoubleGis.Erm.Platform.TaskService.Jobs.Concrete.PerformedOperationsProcessing.Analysis.Consumer.PerformedOperationsConsumerJob, 2Gis.Erm.Platform.TaskService</job-type>

      <durable>true</durable>
      <recover>false</recover>

      <job-data-map>
        <entry>
          <key>BatchSize</key>
          <value>1000</value>
        </entry>
      </job-data-map>
    </job>
    <trigger>
      <simple>
        <name>Performed Operations - Consumer - Infinite Execution Cycles</name>
        <group>Erm</group>

        <job-name>Performed Operations - Consumer</job-name>
        <job-group>ErmInterruptable</job-group>

        <repeat-count>-1</repeat-count>
        <repeat-interval>2000</repeat-interval>
      </simple>
    </trigger>
    
  </schedule>
</job-scheduling-data>