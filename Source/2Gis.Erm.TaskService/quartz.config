<?xml version="1.0" encoding="utf-8" ?>
<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

  <!-- overwrite existing jobs -->
  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>

  <schedule>
    <!-- Экспорт прайсов -->
    <trigger>
      <cron>
        <name>Экспорт прайсов в шину интеграции - каждую минуту</name>
        <group>Erm</group>
        <job-name>Экспорт объектов в шину интеграции</job-name>
        <job-group>Erm</job-group>

        <job-data-map>
          <entry>
            <key>Flows</key>
            <value>flowPriceLists.PriceList;flowPriceLists.PriceListPosition</value>
          </entry>
          <entry>
            <key>ExportInvalidObjects</key>
            <value>false</value>
          </entry>
        </job-data-map>

        <cron-expression>0 0/1 * * * ?</cron-expression>
        <time-zone>N. Central Asia Standard Time</time-zone>

      </cron>
    </trigger>

    <trigger>
      <cron>
        <name>Экспорт прайсов в шину интеграции, ранее не прошедших валидацию - каждые 2 часа</name>
        <group>Erm</group>
        <job-name>Экспорт объектов в шину интеграции</job-name>
        <job-group>Erm</job-group>

        <job-data-map>
          <entry>
            <key>Flows</key>
            <value>flowPriceLists.PriceList;flowPriceLists.PriceListPosition</value>
          </entry>
          <entry>
            <key>ExportInvalidObjects</key>
            <value>true</value>
          </entry>
        </job-data-map>

        <cron-expression>0 0 0/2 * * ?</cron-expression>
        <time-zone>N. Central Asia Standard Time</time-zone>

      </cron>
    </trigger>
  </schedule>

</job-scheduling-data>
