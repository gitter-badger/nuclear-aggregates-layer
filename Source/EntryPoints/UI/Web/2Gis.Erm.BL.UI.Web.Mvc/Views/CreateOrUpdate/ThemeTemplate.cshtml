
@model Models.ThemeTemplateViewModel

@{
    Layout = "../Shared/_CardLayout.cshtml";
}

@section CardScripts
{
    <script src="/Scripts/Ext.DoubleGis.UI.ThemeTemplate.js?@SolutionInfo.ProductVersion.Build" type="text/javascript"></script>
}

@section CardBody
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.FileName)
    @Html.HiddenFor(m => m.FileContentType)
    @Html.HiddenFor(m => m.FileContentLength)
    <div class="Tab" id="MainTab" title="@BLResources.GeneralTabTitle">
        <div class="row-wrapper">
            @Html.TemplateField(m => m.TemplateCode, FieldFlex.twins, new Dictionary<string, object> { { "class", "inputfields readonly" } }, EnumResources.ResourceManager)
        </div>
        <div class="row-wrapper">
            @Html.TemplateField(m => m.FileId, FieldFlex.lone)
        </div>
        <div class="row-wrapper">
            @Html.TemplateField(m => m.IsSkyScraper, FieldFlex.lone)
        </div>
    </div>
}