    </sectionGroup>
  </configSections>

  <system.web.webPages.razor>
    <host factoryType="System.Web.Mvc.MvcWebRazorHostFactory, System.Web.Mvc, Version=5.1.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" />
    <pages pageBaseType="System.Web.Mvc.WebViewPage">
      <namespaces>
        <add namespace="System.Web.Mvc" />
        <add namespace="System.Web.Mvc.Ajax" />
        <add namespace="System.Web.Mvc.Html" />
        <add namespace="System.Web.Optimization"/>
        <add namespace="System.Web.Routing" />
        <add namespace="DoubleGis.Erm.Platform.Common" />
        <add namespace="DoubleGis.Erm.Platform.Model.Entities" />
        <add namespace="DoubleGis.Erm.Platform.Model.Entities.Enums" />
        <add namespace="DoubleGis.Erm.Platform.Model.Metadata.Enums" />
        <add namespace="DoubleGis.Erm.Platform.UI.Web.Mvc" />
        <add namespace="DoubleGis.Erm.Platform.UI.Web.Mvc.Utils" />
        <add namespace="DoubleGis.Erm.Platform.UI.Web.Mvc.Security" />
        <add namespace="DoubleGis.Erm.BLCore.UI.Web.Mvc.Utils" />
        <add namespace="DoubleGis.Erm.BLCore.UI.Web.Mvc.Models" />
        <add namespace="DoubleGis.Erm.BLCore.UI.Web.Mvc.Controllers" />
        <add namespace="DoubleGis.Erm.BLCore.UI.Web.Mvc.Settings" />
        <add namespace="DoubleGis.Erm.BLCore.UI.Web.Mvc.UserProfiles" />
