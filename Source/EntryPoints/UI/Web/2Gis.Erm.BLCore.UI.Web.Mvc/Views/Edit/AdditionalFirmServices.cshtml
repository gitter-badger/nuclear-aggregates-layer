@model IdModel

@{
    Layout = "../Shared/_SiteLayout.cshtml";
}

@section TitleContent { }

@section HeadContent
{
    <script src="/Scripts/Ext.DoubleGis.UI.AdditionalFirmServicesControl.js?@SolutionInfo.ProductVersion.Build" type="text/javascript"></script>

    <script type="text/javascript">
        Ext.onReady(function ()
        {
            var id = Ext.get("Id").dom.value;

            var config =
            {
                div: 'AdditionalFirmServicesDiv',
                
                api:
                {
                    read: { url: '/AdditionalFirmService/GetAdditionalFirmServices', method: 'GET' },
                    update: { url: '/AdditionalFirmService/SetAdditionalFirmServices', method: 'POST' }
                },
                baseParams: { firmId: id }
            };
            
            Ext.DoubleGis.UI.AdditionalFirmServicesControlInstance = new Ext.DoubleGis.UI.AdditionalFirmServicesControl(config);
        });
    </script>
}

@section MainContent
{
    @Html.HiddenFor(m => m.Id)
    <div id="AdditionalFirmServicesDiv"/>
}