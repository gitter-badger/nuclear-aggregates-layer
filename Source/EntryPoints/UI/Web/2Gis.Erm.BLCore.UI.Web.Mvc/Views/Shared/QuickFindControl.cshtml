@model ViewModels.QuickFindSettings

<script src="/Scripts/DoubleGis.UI.QuickFind.js?@ThisAssembly.Build" type="text/javascript"></script>

<script type="text/javascript">
Ext.onReady(function () 
    {
        var q = new Ext.DoubleGis.UI.QuickFind("@Model.Name");
        q.on("change", @Model.OnSearchFunction);
        var filter = Ext.urlDecode(location.search.substring(1)).search;
        q.setValue(filter?decodeURIComponent(filter):"");
    }
);
</script>
<table cellpadding="0" cellspacing="0">
    <colgroup>
        <col width="100%">
        <col width="21px">
    </colgroup>
    <tr>
        <td>
            <input type="text" id="@(Model.Name)_Text" class="QuickFind" style="width: 100%" />
        </td>
        <td>
            <img id="@(Model.Name)_Button" class="QuickFind" alt="@BLResources.Find" />
        </td>
    </tr>
</table>
