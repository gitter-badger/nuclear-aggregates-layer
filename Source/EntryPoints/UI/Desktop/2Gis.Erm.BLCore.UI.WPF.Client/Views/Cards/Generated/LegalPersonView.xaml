<UserControl x:Class="DoubleGis.Erm.BLCore.UI.WPF.Client.Views.Cards.LegalPersonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Controls;assembly=2Gis.Platform.UI.WPF.Infrastructure"
			 xmlns:focusableBinding="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Util.FocusableBinding;assembly=2Gis.Platform.UI.WPF.Infrastructure"
             xmlns:controls="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 xmlns:contextNav="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.ViewModel.ContextualNavigation;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
             xmlns:basic="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls.Basic;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <UserControl.Resources>
		<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/2Gis.Erm.BLCore.UI.WPF.Client;component/Themes/generic.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
        
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
			<core:BriefGrid Columns="*, *" Rows="Auto,Auto,Auto,Auto,Auto,Auto,Auto">
				<controls:NamedTextBox Grid.Row="0" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.LegalName}" 
										Text="{Binding LegalName, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="0" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ShortName}" 
										Text="{Binding ShortName, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedEnumComboBox Grid.Row="1" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.LegalPersonType}" 
										SelectedValue="{Binding LegalPersonTypeEnum, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="1" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Comment}" 
										Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="2" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.LegalAddress}" 
										Text="{Binding LegalAddress, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="2" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Inn}" 
										Text="{Binding Inn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="3" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Kpp}" 
										Text="{Binding Kpp, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="3" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Inn}" 
										Text="{Binding BusinessmanInn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="4" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PassportSeries}" 
										Text="{Binding PassportSeries, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="4" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PassportNumber}" 
										Text="{Binding PassportNumber, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="5" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PassportIssuedBy}" 
										Text="{Binding PassportIssuedBy, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="5" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.RegistrationAddress}" 
										Text="{Binding RegistrationAddress, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="6" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ClientName}" 
										Reference="{Binding ClientRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
			</core:BriefGrid>
				<HeaderedContentControl Header="{Binding}" Margin="0 15 0 0">
                    <HeaderedContentControl.Style>
                        <Style TargetType="HeaderedContentControl">
                            <Setter Property="Visibility" Value="{Binding Path=(contextNav:IContextualNavigationViewModel.Parts)[AdministrationTabTitle].IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <basic:TitledSection Title="{Binding Localizer.AdministrationTabTitle}" Margin="0 0 0 10">
                                            <basic:TitledSection.Style>
                                                <Style TargetType="basic:TitledSection">
                                                    <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
                                                    <Setter Property="SectionLineBrush" Value="{DynamicResource ModernButtonBorder}"/>
                                                    <Setter Property="TitleTextStyle" Value="{DynamicResource Emphasis}"/>
                                                    <Setter Property="Command" Value="{Binding Path=(contextNav:IContextualNavigationViewModel.Parts)[AdministrationTabTitle].Command}"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource ItemBackgroundHover}" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </basic:TitledSection.Style>
                                        </basic:TitledSection>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </HeaderedContentControl.Style>
			<core:BriefGrid Columns="*, *" Rows="Auto,Auto,Auto">
				<controls:NamedLookup Grid.Row="0" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Owner}" 
										Reference="{Binding OwnerRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="0" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedBy}" 
										Reference="{Binding CreatedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="1" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding CreatedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="1" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ModifiedBy}" 
										Reference="{Binding ModifiedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="2" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding ModifiedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
			</core:BriefGrid>
				</HeaderedContentControl>
	</StackPanel>
</UserControl>
