<UserControl x:Class="DoubleGis.Erm.BLCore.UI.WPF.Client.Views.Cards.PositionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Controls;assembly=2Gis.Platform.UI.WPF.Infrastructure"
			 xmlns:focusableBinding="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Util.FocusableBinding;assembly=2Gis.Platform.UI.WPF.Infrastructure"
             xmlns:controls="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 xmlns:contextNav="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.ViewModel.ContextualNavigation;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
             xmlns:basic="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls.Basic;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <UserControl.Resources>
		<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/2Gis.Erm.BLCore.UI.WPF.Client;component/Themes/generic.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
        
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
			<core:BriefGrid Columns="*, *" Rows="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
				<controls:NamedTextBox Grid.Row="0" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Id}" 
										Text="{Binding Id, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="0" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Position}" 
										Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedCheckBox Grid.Row="1" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CompositePosition}" 
										IsChecked="{Binding IsComposite, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedEnumComboBox Grid.Row="1" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CalculationMethod}" 
										SelectedValue="{Binding CalculationMethodEnum, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedEnumComboBox Grid.Row="2" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.AccountingMethod}" 
										SelectedValue="{Binding AccountingMethodEnum, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="2" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Platform}" 
										Reference="{Binding PlatformRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="3" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Platform}" 
										Reference="{Binding CategoryRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="3" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Platform}" 
										Reference="{Binding AdvertisementTemplateRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="4" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ExportCode}" 
										Text="{Binding ExportCode, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="4" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.DgppId}" 
										Text="{Binding DgppId, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedCheckBox Grid.Row="5" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.IsControledByAmount}" 
										IsChecked="{Binding IsControlledByAmount, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedEnumComboBox Grid.Row="5" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.BindingObjectType}" 
										SelectedValue="{Binding BindingObjectTypeEnum, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="6" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedBy}" 
										Reference="{Binding CreatedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="6" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding CreatedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="7" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ModifiedBy}" 
										Reference="{Binding ModifiedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="7" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding ModifiedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
			</core:BriefGrid>
	</StackPanel>
</UserControl>
