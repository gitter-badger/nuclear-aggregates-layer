<UserControl x:Class="DoubleGis.Erm.BLCore.UI.WPF.Client.Views.Cards.BillView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Controls;assembly=2Gis.Platform.UI.WPF.Infrastructure"
			 xmlns:focusableBinding="clr-namespace:DoubleGis.Platform.UI.WPF.Infrastructure.Util.FocusableBinding;assembly=2Gis.Platform.UI.WPF.Infrastructure"
             xmlns:controls="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 xmlns:contextNav="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.ViewModel.ContextualNavigation;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
             xmlns:basic="clr-namespace:DoubleGis.Erm.Platform.UI.WPF.Infrastructure.Presentation.Controls.Basic;assembly=2Gis.Erm.Platform.UI.WPF.Infrastructure"
			 mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <UserControl.Resources>
		<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/2Gis.Erm.BLCore.UI.WPF.Client;component/Themes/generic.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
        
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
			<core:BriefGrid Columns="*, *" Rows="Auto,Auto,Auto,Auto,Auto,Auto">
				<controls:NamedTextBox Grid.Row="0" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.BillNumber}" 
										Text="{Binding BillNumber, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										IsReadOnly="True"
										/>
				<controls:NamedDatePicker Grid.Row="0" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.BillDate}" 
										SelectedDate="{Binding BillDate, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="1" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.BeginDistributionDate}" 
										SelectedDate="{Binding BeginDistributionDate, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="1" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.EndDistributionDate}" 
										SelectedDate="{Binding EndDistributionDate, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="2" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PaymentDatePlan}" 
										SelectedDate="{Binding PaymentDatePlan, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="2" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.PayablePlan}" 
										Text="{Binding PayablePlan, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedTextBox Grid.Row="3" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.Comment}" 
										Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=TwoWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="3" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedBy}" 
										Reference="{Binding CreatedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="4" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding CreatedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedLookup Grid.Row="4" Grid.Column="1" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.ModifiedBy}" 
										Reference="{Binding ModifiedByRef, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
				<controls:NamedDatePicker Grid.Row="5" Grid.Column="0" 
										PropertyName="{focusableBinding:FocusableBinding Localizer.CreatedOn}" 
										SelectedDate="{Binding ModifiedOn, UpdateSourceTrigger=PropertyChanged, Delay={StaticResource BindingDelay}, ValidatesOnDataErrors=True, NotifyOnValidationError=True, Mode=OneWay}" 
										
										/>
			</core:BriefGrid>
	</StackPanel>
</UserControl>
